<% provide(:title, t('title.sign_in')) %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-4 sign-in-form">
    <h1 class="text-center"><%= t('.title') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', required: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', required: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.text_field :otp_code_token, placeholder: 'Token (Only if Two Factor Authentication Enabled!)', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('.remember_me') %>
        </div>
      <% end -%>

      <div class="form-group">
          <%= f.submit t('.sign_in'), class: "btn btn-info btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center sign-in">
      <%- if devise_mapping.omniauthable? %>
        <h4><%= t('.sign_in_with') %></h4>
        <%= link_to user_facebook_omniauth_authorize_path, title: 'Facebook' do %>
          <%= image_tag "fb.png", width: 66, class: "sign-in" %>
        <% end %>
        <%= link_to user_google_oauth2_omniauth_authorize_path, title: 'Google' do %>
          <%= image_tag "google.png", width: 60, class: "sign-in" %>
        <% end %>
      <% end -%>
    </div>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
