<h2><%= t('.title') %></h2>
<%= form_with(model: [ @user, @user.reviews.build ], local: true) do |form| %>
  <div class="stars">
    <%= form.radio_button :rating, 5, id: 'star-5', class: "star star-5" %>
    <label class="star star-5" for="star-5" title="<%= t('.rating.excellent') %>"></label>
    <%= form.radio_button :rating, 4, id: 'star-4', class: "star star-4" %>
    <label class="star star-4" for="star-4" title="<%= t('.rating.good') %>"></label>
    <%= form.radio_button :rating, 3, id: 'star-3', class: "star star-3" %>
    <label class="star star-3" for="star-3" title="<%= t('.rating.fine') %>"></label>
    <%= form.radio_button :rating, 2, id: 'star-2', class: "star star-2" %>
    <label class="star star-2" for="star-2" title="<%= t('.rating.so-so') %>"></label>
    <%= form.radio_button :rating, 1, id: 'star-1', class: "star star-1" %>
    <label class="star star-1" for="star-1" title="<%= t('.rating.bad') %>"></label>
  </div>

  <div class="form-group">
    <%= form.label t('.comment') %>
    <%= form.text_area :body, required: true, placeholder: t('.placeholder'), class: "form-control" %>
  </div>
  <%= form.submit t('.send'), class: "btn btn-default" %>
<% end %>
