<div class="row">
  <div class="col-md-12">
    <%= link_to 'Compose', new_conversation_path, class: "btn btn-success" %>
    <div class="col-md-12 text-right">
      <% if conversation.is_trashed?(current_user) %>
        <%= link_to 'Untrash', untrash_conversation_path(conversation), method: :post, class: "btn btn-info" %>
      <% else %>
        <%= link_to 'Move to trash', trash_conversation_path(conversation), method: :post, data: { confirm: 'Sure?' }, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <%= render partial: 'messages' %>
      </div>
      <div class="card-footer">
        <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
          <div class="form-group mb-2">
            <%= f.text_area :body, placeholder: 'Reply message', class: "form-control" %>
          </div>
          <%= f.submit 'Reply', class: "btn btn-success pull-right  mb-2" %>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
