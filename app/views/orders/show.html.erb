<div class="jumbotron">
  <p class="lead">
    Start: <%= @order.start_point %> - Finish: <%= @order.finish_point %>
  </p>
  <hr class="my-4">
  <p>Price: <%= @order.price %></p>
  <p>Date: <%= @order.date %></p>
  <p>Weight: <%= @order.weight %></p>
  <p>Status: <%= @order.status %></p>
  <p>Comment: <%= @order.comment %></p>
  <% if @driver %>
    <p>
      Заказ принял: <%= link_to "#{@driver.first_name} #{@driver.last_name}", profile_path(driver: @driver) %>
    </p>
  <% end %>
  <p class="lead">
    <% if current_user.driver %>
      <% if @order.status.match('Принят') %>
      <%= link_to 'Доставлен', change_status_path(id: @order, status: 2, driver_id: current_user), class: "btn btn-info" %>
      <%= link_to 'Отказаться', change_status_path(id: @order, status: 0, driver_id: nil), class: "btn btn-info" %>
      <% else %>
        <%= link_to 'Принять заказ', change_status_path( id: @order, status: 1, driver_id: current_user),class: "btn btn-info" %>
      <% end %>
    <% else %>
      <%= link_to 'Редактировать', edit_order_path(@order), class: "btn btn-info" %>
      <%= link_to 'Удалить', order_path(@order),method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-info" %>
    <% end %>
  </p>
</div>
