<table class="table table-hover">
  <% if current_user.driver ? @orders.new_order.present? : @user_orders.present? %>

    <% if current_user.driver %>
      <h2 class="text-center"><%= t('.available') %></h2>
      <%= render 'orders', orders: @orders.new_order %>
    <% else %>
      <h2 class="text-center"><%= t('.your_orders') %></h2>
      <%= render 'orders', orders: @user_orders %>
    <% end %>

  <% else %>
    <% if current_user.driver %>
      <h2 class="text-center"><%= t('.no_driver_orders') %></h2>
    <% else %>
      <h2 class="text-center"><%= t('.no_user_orders') %></h2>
    <% end %>
  <% end %>
</table>
<div class="text-center">
  <%= link_to t('.new_order'), new_order_path, method: :get, class: "btn btn-info" unless current_user.driver %>
</div>
<%= will_paginate current_user.driver ? @orders.new_order : @user_orders %>
