<table class="table table-hover">
  <% if current_user.driver ? @orders.status_new.present? : current_user.orders.present? %>
    <% if current_user.driver %>
      <h2 class="text-center"><%= t('.available') %></h2>
    <% else %>
      <h2 class="text-center"><%= t('.your_orders') %></h2>
    <% end %>
    <tr>
      <th><%= t('.starting_point') %></th>
      <th><%= t('.destination_point') %></th>
      <th><%= t('.date') %></th>
      <th><%= t('.price') %></th>
      <th><%= t('.status') %></th>
      <th colspan="2"></th>
    </tr>
    <% if current_user.driver %>
      <% @orders.status_new.each do |order| %>
        <%= render 'orders', order: order %>
      <% end %>
    <% else %>
      <% current_user.orders.each do |order| %>
        <%= render 'orders', order: order %>
      <% end %>
    <% end %>
  <% else %>
    <h2 class="text-center"><%= t('.no_orders') %></h2>
  <% end %>
</table>
<div class="text-center">
  <%= link_to t('.new_button'), new_start_path, method: :get, class: "btn btn-info" unless current_user.driver %>
</div>
