<%= form_for @destination_point do |f| %>
  <% if @destination_point.errors.any? %>
      <ul>
        <% @destination_point.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
          <% end %>
      </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :destination_point, class: "control-label" %>
    <%= f.text_field :destination_point, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :destination_latitude, class: "control-label" %>
    <%= f.text_field :destination_latitude, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :destination_longitude, class: "control-label" %>
    <%= f.text_field :destination_longitude, class: "form-control" %>
  </div>
  <%= f.submit 'Сохранить', class: "btn btn-success" %>
  <%= link_to 'Назад', :back, class: "btn btn-default" %>
<% end %>
